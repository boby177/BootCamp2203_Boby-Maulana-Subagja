<div class="ads-right">
  <img src="../img/others/ads3.jpg" alt="" width="220" height="500">
</div>
<div class="container">
    <h2>
        List All Foramu Sub Forum
    </h2>
        <div class="card text-center">
            <% subForum.forEach(subForum => { %> 
            <h5 class="card-header"><%= subForum.name_sub_forum %></h5>
            <div class="card-body">
              <!-- <h5 class="card-title">Special title treatment</h5> -->
              <p class="card-title"><%= subForum.desc_sub_forum %></p>
              <a href="/discussion/<%= subForum.id_post %> " class="btn btn-outline-dark">More Detail</a>
              <p class="card-text"><small class="text-muted"> Created: <%= subForum.date_sub_forum %> </small></p>
          <% }); %>
            </div>
          </div>
          
</div>