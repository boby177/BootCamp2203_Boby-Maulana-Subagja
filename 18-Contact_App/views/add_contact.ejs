<div class="container">
  <br>
  <h2> Form add new contact </h2>
  <br>
  <% if (typeof errors != 'undefined') { %>
   <div class="alert alert-danger col-md-4 mb-3">
     <ul>
       <% errors.forEach(error => { %>
         <li> <%= error.msg %> </li>
       <% }) %>
     </ul>
   </div>
  <% } %>
<form method="post" action="/contact">
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationDefault01">Name</label>
      <input type="text" class="form-control" id="validationDefault01" name="name" placeholder="Boby" required>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationDefault03">Email</label>
      <input type="text" class="form-control" id="validationDefault03" name="email" placeholder="boby@gmail.com">
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault04">Mobile</label>
      <input type="text" class="form-control" id="validationDefault04" name="mobile" placeholder="08892821" required>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
      <label class="form-check-label" for="invalidCheck2">
        Agree to terms and conditions
      </label>
    </div>
  </div>
  <br>
  <button class="btn btn-dark" type="submit"> Submit</button>
</form>
</div>