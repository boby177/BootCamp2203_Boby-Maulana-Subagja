<!-- Content -->
<center> <H1> This is home page</H1> <br> </center>   
      <h2><p>Hello and Welcome <%= identity.name %> </p> </h2>
      <h3><%= identity.judul %> </h3>
      <br>
      

      <table class="table table-striped table-dark">
        <thead>
          <center><h3>Contact List JSON</h3></center>
        <% if (contact.length < 1 ) { %> <!-- Terdapat hanya 3 data array, maka hasilnya akan empty -->
         <p>Contact is empty</p>
        <% } else { %>
          <tr>
            <th scope="col"> # </th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <!-- <th scope="row">1</th> -->
            <% contact.forEach((contact, i) => { i++ %>
              <td><%= i %></td>
            <td><%= contact.name %></td>
            <td> <%= contact.email %></td>
            <td> <%= contact.mobile %></td>
            <br>
          </tr>
          <% })}; %>
        </tbody>
      </table>
    