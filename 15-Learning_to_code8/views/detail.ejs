<center> <H1> This is details contact </H1> <br> </center> 

<div class="container">
<div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <center><h5 class="card-title">Details contact from</h5></center>
        <br>
        <p class="card-text">Name: <%= contact.name %></p>
        <p class="card-text">Email: <%= contact.email %></p>
        <p class="card-text">Mobile: <%= contact.mobile %></p>
        <center>
        <a href="/contact" button type= button class="btn btn-outline-success">Back</a>
        <a href="/delete/<%= contact.name %>" button onclick="return confirm('Are you sure delete this contact?')"
        type= button class="btn btn-outline-danger">Delete</a>
        <a href="/contact/update/<%= contact.name %>" 
        type= button class="btn btn-outline-info">Update</a>
      </center>
      </div>
    </div>
  </div>
</div> 